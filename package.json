{
  "name": "local-rewrite",
  "version": "1.0.0",
  "description": "A Chrome extension for text improvement using local Ollama models",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "node copy-files.js",
    "dev": "concurrently \"tsc --watch\" \"web-ext run --source-dir=dist\"",
    "package": "npm run build && web-ext build --source-dir=dist",
    "setup": "npm install && npm run build"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "web-ext": "^7.8.0"
  },
  "keywords": [
    "chrome-extension",
    "ollama",
    "text-improvement",
    "grammarly"
  ],
  "author": "Himanshu Karnwal",
  "license": "MIT"
}
