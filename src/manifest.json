{
  "manifest_version": 3,
  "name": "Local Text Improver",
  "version": "1.0.0",
  "description": "Improve text using local Ollama AI models",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:11434/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/types.js",
        "shared/constants.js", 
        "shared/storage.js",
        "shared/utils.js",
        "shared/ollama-service.js",
        "content/ping-icon.js",
        "content/improvement-panel.js",
        "content/content.js"
      ],
      "css": ["content/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Local Text Improver"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
